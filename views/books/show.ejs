<h2 class="book-title">
    <%= book.title %>
</h2>
<img class="book-image" src="<%= book.coverImagePath %>" />

<div>
    Author:
    <%= book.author.name %>
</div>
<div>
    Publish Date:
    <%= book.publishDate.toDateString() %>
</div>
<div>
    Page Count:
    <%= book.pageCount %>
</div>
<div>
    Description:
    <%= book.description %>
</div>

<div class="btn-row">
    <a class="btn btn-primary" href="/books/<%= book.id %>/edit">Edit</a>
    <a class="btn btn-primary" href="/authors/<%= book.author.id %>">View Author</a>
    <%- include('../partials/deleteForm', { url: `/books/${book.id}` }) %>
</div>